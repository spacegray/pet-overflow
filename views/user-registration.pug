extends nav-bar.pug

include utils.pug

block content
  div.modalContent
    h2#login-form-h2 Welcome to Pet Overflow
    div.modalregister
        +validationErrorSummary(errors)
        form(action='/users/register' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            div
                label(for="userName") Username
            div
                input(type="text", name="userName")
            br
            div
                label(for="email") Email
            div
                input(type="text", name="email")
            br
            div
                label(for="password") Password
            div
                input(type="password", name="password")
            br
            div
                label(for="confirmPassword") Confirm Password
            div
                input(type="password", name="confirmPassword")
            br
            div
                button(type='submit' class='button') Register
            br
        div.register_buttons
            form(action=`/` method="get")
                input(type="submit" value="Cancel" class='cancel-button')
            form(action='/users/demo' method="get")
                input(type="submit" value="Demo Login" class='new_demo')
        p.link Already have an account? <a href='/users/login' class='what'>Sign in</a>!
